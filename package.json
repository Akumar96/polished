{
  "name": "polished",
  "private": true,
  "version": "3.0.0-beta.0",
  "description": "A lightweight toolset for writing styles in JavaScript.",
  "main": "lib/index.js",
  "module": "dist/polished.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "flow": "make flow",
    "format": "make format",
    "lint": "make lint",
    "test": "make test",
    "test:u": "make test-update",
    "build": "yarn build:lib && yarn build:dist && yarn build:flow && yarn build:typescript",
    "prebuild:lib": "shx rm -rf lib/*",
    "build:lib": "cross-env BABEL_ENV=cjs babel --out-dir lib packages/core --ignore test.js",
    "prebuild:dist": "shx rm -rf dist/*",
    "build:dist": "rollup -c",
    "build:watch": "npm-watch",
    "build:flow": "flow-copy-source -v -i '{**/test/*.js,**/*.test.js}' packages/core lib",
    "build:typescript": "tsgen \"lib/**/*.js.flow\" --ignore \"lib/**/_*.js.flow\"",
    "typescript": "tsc ./typescript-test.ts --noEmit --target es6 --module es2015 --moduleResolution node --allowJs",
    "precommit": "lint-staged --debug",
    "postcommit": "validate-commit-msg",
    "prepare": "yarn build && yarn typescript",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "packages/**/!(*.test).js": [
      "make format",
      "git add"
    ],
    "packages/**/*.test.js": [
      "make format",
      "git add"
    ]
  },
  "watch": {
    "build:docs": "src/**/*.js",
    "build:lib": "src/**/*.js"
  },
  "author": "Brian Hough <hello@brianhough.net> (https://polished.js.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/styled-components/polished.git"
  },
  "keywords": [
    "styled-components",
    "polished",
    "emotion",
    "glamor",
    "css-in-js",
    "inline-styles",
    "react",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/styled-components/polished/issues"
  },
  "homepage": "https://polished.js.org",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-annotate-pure-calls": "^0.3.0",
    "concat-stream": "^1.5.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "2.6.2",
    "flow-bin": "0.80.0",
    "flow-copy-source": "^2.0.2",
    "flow-coverage-report": "^0.6.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "npm-watch": "^0.3.0",
    "prettier": "^1.14.2",
    "ramda": "^0.25.0",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^5.0.2",
    "semantic-release": "^15.9.13",
    "shx": "^0.3.2",
    "tsgen": "1.3.0",
    "typescript": "3.0.3",
    "validate-commit-msg": "^2.14.0",
    "vinyl": "^2.2.0",
    "vinyl-fs": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testURL": "http://localhost/",
    "verbose": true
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/polished"
  }
}
